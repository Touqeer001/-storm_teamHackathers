<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .main {
        width: 100vw;
        height: 100vh;
        background-color: aqua;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container-1 {
        width: 50vw;
        height: auto;
        background-color: #fff;
        border: 1px solid transparent;
        overflow: hidden;
        border-radius: 10px;
        padding: 30px;
    }

    .rating {
        margin-bottom: 10px;
    }

    .rating label {
        margin-bottom: 3px;
    }

    .rating select {
        border: 1px solid black;
        border-radius: 5px;
        padding: 10px;
    }

    /* Styling for the dropdown container */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* Styling for the dropdown button */
    .dropdown-btn {
        background-color: #007bff;
        /* Blue background color */
        color: #fff;
        /* White text color */
        padding: 10px 20px;
        /* Padding around the button text */
        border: none;
        /* No border */
        cursor: pointer;
        /* Display pointer cursor on hover */
    }

    /* Styling for the dropdown content (hidden by default) */
    .dropdown-content {
        display: none;
        /* Hide the content by default */
        position: absolute;
        background-color: #f9f9f9;
        /* Light gray background color */
        min-width: 160px;
        /* Minimum width of the dropdown content */
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        /* Box shadow for dropdown */
        z-index: 1;
        /* Ensure the dropdown appears above other elements */
    }

    /* Styling for each dropdown option (links) */
    .dropdown-content a {
        color: #333;
        /* Text color for dropdown options */
        padding: 12px 16px;
        /* Padding around each option */
        text-decoration: none;
        /* Remove underlines from links */
        display: block;
        /* Make options a block element */
    }

    /* Change the background color of the option when hovered over */
    .dropdown-content a:hover {
        background-color: #ddd;
        /* Light gray background color on hover */
    }

    /* Show the dropdown content when the button is hovered over */
    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>

<div class="main">
    <div class="container-1">
        <div class="form-section">


            <form method="POST" action="/submit-feedback">

                <div class="rating">
                    <label for="rating">User:</label> <br>
                    <select id="user" name="user">
                        <option value="" disabled selected>Select User</option>
                        <% users.forEach(function(user) { %>
                            <option value="<%= user.email %>"><%= user.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="rating">
                    <label for="rating">Rating:</label> <br>
                    <select id="rating" name="rating">
                        <option value="5">5 - Excellent</option>
                        <option value="4">4 - Very Good</option>
                        <option value="3">3 - Average</option>
                        <option value="2">2 - Poor</option>
                        <option value="1">1 - Very Poor</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="suggestion" class="form-label">Suggestion</label><br>
                    <textarea name="suggestion" id="suggestion" cols="40"
                        rows="2"> Write Your Suggestion</textarea>
                </div>

                <input value="<%= user.email ? user.email : '' %>" id="email" type="hidden" name="email"/>
                <button type="submit" class="btn btn-primary">Submit</button>

            </form>
        </div>
    </div>

</div>