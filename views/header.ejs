            <i class="fas fa-power-off"></i>
          </div> -->
        <!-- <button type="button" class="btn btn-danger"><i class="fas fa-power-off"></i>&nbsp;&nbsp;</button> -->
        <div class="user-name"><%= user.name %></div>

        <div class="icon">
          <a href="/user/profile">
            <img
              src="<%= user.image %>"
              alt="Profile_image"
              class="profile-logo"
              style="content: icon"
            />
          </a>
        </div>

        <div class="icon">
          <a href="/user/sign-out">
            <i class="fas fa-sign-out-alt logout-icon"></i>
          </a>
        </div>

        <% } else { %> <% if (title=='Sign In') { %>
        <a href="/user/sign-up"
          ><button type="button" class="btn btn-success">SIGN UP</button></a
        >
        <% } else if (title=='Sign Up') { %>
        <a href="/user/sign-in"
          ><button type="button" class="btn btn-success">SIGN IN</button></a
